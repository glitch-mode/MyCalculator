<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CalculatorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_view_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="80dp"
        android:paddingLeft="16dp"
        android:textColor="#FDFDFD"
        android:textColorHint="#DCD9D9"
        android:autoSizeTextType="uniform"
        android:paddingStart="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_result"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:gravity="center"
                android:background="#303030"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:autoSizeTextType="uniform" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:autoSizeTextType="uniform"
                android:text="DELETE"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button_seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:layout_margin="4dp"
            android:background="#696969"
            android:text="7"
            android:textColor="#FAFAFA" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#696969"
            android:layout_margin="4dp"
            android:text="8"
            android:textColor="#FDFDFD"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:layout_margin="4dp"
            android:background="#696969"
            android:textColor="#F6F5F5"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#303030"
            android:text="รท"
            android:layout_margin="4dp"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="#696969"
            android:layout_margin="4dp"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:layout_margin="4dp"
            android:background="#696969"
            android:textColor="#F8F5F5"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:layout_margin="4dp"
            android:background="#696969"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_multiplication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ร"
            android:layout_margin="4dp"
            android:background="#303030"
            android:textColor="#F6F6F5"
            android:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:background="#696969"
            android:layout_margin="4dp"
            android:textColor="#FFFEFE"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:background="#696969"
            android:layout_margin="4dp"
            android:textColor="#F8F8F8"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:background="#696969"
            android:layout_margin="4dp"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_subtraction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#303030"
            android:text="-"
            android:layout_margin="4dp"
            android:textColor="#FAF9F8"
            android:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:layout_margin="4dp"
            android:textColor="#F4F4F4"
            android:background="#696969"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:layout_margin="4dp"
            android:background="#696969"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:background="#696969"
            android:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/button_summation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="+"
            android:background="#303030"
            android:textColor="#FBFBF9"
            android:autoSizeTextType="uniform" />
    </LinearLayout>
    </LinearLayout>



</FrameLayout>